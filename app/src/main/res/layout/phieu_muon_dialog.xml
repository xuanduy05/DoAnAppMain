<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/giaodien4"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="PHIẾU MƯỢN"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:background="@drawable/giaodien5"

        />

    <EditText
        android:id="@+id/edMaPM"
        android:layout_width="251dp"
        android:layout_height="50dp"
        android:padding="10dp"
        android:background="@drawable/giaodien1"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Mã Phiếu Mượn"
        android:textColor="@color/black" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/spMaTV"

        />
    <Spinner
        android:id="@+id/spMaSach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNgayphieumuon"
        android:textColor="@color/black"
        android:background="@drawable/giaodien1"
        android:padding="10dp"
        android:fontFamily="@font/poppinsmedium"
        android:text="Ngày Thuê :"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTienThuePm"
        android:text="Tiền Thuê:"
        android:fontFamily="@font/poppinsmedium"
        android:background="@drawable/giaodien1"
        android:padding="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chkTraSach"
        android:text="Đã Trả Sách"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="25dp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/black"
        android:layout_marginRight="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lưu"
            android:fontFamily="@font/poppinsmedium"
            android:id="@+id/btnSavePM"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:background="@drawable/background_button5"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:id="@+id/btnCancelPM"
            android:background="@drawable/background_button5"
            android:fontFamily="@font/poppinsmedium"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:layout_marginHorizontal="20dp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>