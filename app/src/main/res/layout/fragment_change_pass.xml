<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/giaodien6"
    tools:context=".fragment.ChangePassFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/LLdoimatkhau"
        android:background="@drawable/giaodien1"
        android:backgroundTint="#f0ffff"
        android:layout_margin="20dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="50dp"
            android:src="@drawable/update111" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edPassOld"
                android:hint="Mật Khẩu Củ"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:drawableRight="@drawable/thanhvien"
                android:background="@drawable/giaodien1"
                android:inputType="textPassword"
                android:fontFamily="@font/poppinsmedium"
                android:padding="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_margin="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edPassChange"
                android:hint="Mật Khẩu Mới"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:drawableRight="@drawable/thanhvien"
                android:background="@drawable/giaodien1"
                android:inputType="textPassword"
                android:fontFamily="@font/poppinsmedium"
                android:padding="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_margin="10dp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edRePassChange"
                android:hint="Nhập Lại Mật Khẩu"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:textColorHint="@color/black"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:drawableRight="@drawable/thanhvien"
                android:background="@drawable/giaodien1"
                android:inputType="textPassword"
                android:fontFamily="@font/poppinsmedium"
                android:padding="10dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="40dp"
                android:layout_margin="10dp"
                />
        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            >

            <Button
                android:id="@+id/btnSaveUserChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:fontFamily="@font/poppinsmedium"
                android:text="Lưu" />

            <Button
                android:id="@+id/btnCancelUserChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/background_button"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_weight="1"
                android:fontFamily="@font/poppinsmedium"
                android:text="Hủy" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>