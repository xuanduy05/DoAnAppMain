<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/giaodien6"
    android:orientation="vertical"
    tools:context=".fragment.DoanhThuFragment">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:id="@+id/LLDoanhThu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#f5f5dc"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgdoanhthu"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/a2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"

            android:weightSum="3">

            <Button
                android:id="@+id/btnTuNgay"
                android:fontFamily="@font/poppinsmedium"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_button"
                android:text="Từ Ngày"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edTuNgay"
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/giaodien1"
                android:hint="YYYY-MM-DD"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="3">

            <Button
                android:id="@+id/btnDenNgay"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/background_button"
                android:text="Đến Ngày"
                android:textColor="@color/white"
                android:fontFamily="@font/poppinsmedium"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edDenNgay"
                android:layout_width="222dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/giaodien1"
                android:hint="YYYY-MM-DD"
                android:fontFamily="@font/poppinsmedium"
                android:paddingLeft="12dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="18dp" />
        </LinearLayout>

        <Button
            android:id="@+id/btnDoanhThu"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/background_button"
            android:text="Doanh Thu"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/background_button"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDoanhThu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:text="Doanh Thu: "
                android:textColor="@color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>